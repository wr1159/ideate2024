---
import '@fontsource/peace-sans';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="IDEATE 2024 | A Design Thinking Makeathon" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{title}</title>
	</head>
	<body class="bg-[#152cc5] min-h-screen"
	>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "Peace Sans", Helvetica, sans-serif;
		color: #ffffff;
		background: #13151a;
		background-size: 224px;
	}

	.white-text-outline {
		text-shadow: 
			1px 1px 0 white, 
			-1px -1px 0 white,
			1px -1px 0 white,
			-1px 1px white;
	}
	
	.blue-text-outline {
		text-shadow: 
			1px 1px 0 #1C34D4, 
			-1px -1px 0 #1C34D4,
			1px -1px 0 #1C34D4,
			-1px 1px #1C34D4;
	}

	.black-text-outline {
		text-shadow: 
			1px 1px 0 #000000, 
			-1px -1px 0 #000000,
			1px -1px 0 #000000,
			-1px 1px #000000;
	}

	.rounded-square-mask {
		height: 12rem; /* Equivalent to h-24 */
		min-width: 12rem; /* Equivalent to min-w-24 */
		border-radius: 0.375rem; /* Equivalent to rounded-md */
		background-color: #f3f4f6; /* Equivalent to bg-gray-100 */
		overflow: hidden; 
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;

		/* For large screens and above */ @media (min-width: 1024px) {
			height: 12rem; /* Equivalent to lg:h-48 */
			width: 24rem; /* Equivalent to lg:w-48 */
		}

		/* For large screens and above */
		@media (min-width: 1440px) {
			height: 20rem; /* Equivalent to lg:h-64 */
			width: 20rem; /* Equivalent to lg:w-64 */
		}
	}

	.masked-image {
		width: 100%;
		height: 100%;
		object-fit: cover; /* Ensure image covers the container */
		clip-path: inset(0 round 0.375rem); /* Mask with rounded corners */
	}

	.font-poppins {
		font-family: "Poppins", sans-serif;
	}

	@media only screen and (max-width: 959px) {
		body::before {
			content: "";
			background-image: url('../full_bg_1920.png'); /* Use correct URL */
			background-size: cover;
			background-position: center; /* Optional: center the background image */
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: -1; /* Ensure the background image stays behind the content */
			opacity: 0.5; /* Optional: adjust the opacity if needed */
		}
	}

